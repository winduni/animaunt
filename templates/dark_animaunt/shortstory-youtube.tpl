<div class="thumb th-youtube">
	<div class="th-in">
		<a class="th-img img-resp-h with-mask to-trailer" title="{title}" data-src="[xfvalue_link_carousel]" target="_blank" href="[xfvalue_link_carousel]">
			<img src="//i.ytimg.com/vi/{id-youtube}/maxresdefault.jpg" alt="{title}" />
			<div class="th-mask fx-col fx-center fx-middle">
				<span class="fa fa-play"></span>
			</div>
			<div class="th-qual">[xfvalue_channel_name]</div>
		</a>
		<div class="th-desc">
			<a class="th-title" target="_blank" href="[xfvalue_link_carousel]">{title}</a>
		</div>
	</div>
</div>