<div class="article-item clearfix">
	<a class="article-img img-box" href="{full-link}">
		<img src="[xfvalue_image_url_poster]" alt="{title}" />
		<div class="article-date icon-l"><i class="fa fa-calendar"></i> {date=j F}</div>
	</a>
	<div class="article-text">
		<a class="article-title" href="{full-link}">{title limit="65"}</a>
		<div class="article-desc">
			{short-story limit="300"} 
			<a class="more" href="{full-link}">Читать далее</a>
		</div>
	</div>
</div>