<article class="full ignore-select">
	<h1 class="sub-title icon-l icon-yellow">{title}{title}[group=1,2,3,6,8,9,10,11,12,15,18,13,22,23,28]&nbsp;[edit]<span class="fa fa-cog"></span>[/edit][/group]</h1>
	<div class="fdesc full-text clearfix" id="fdesc">{full-story}</div>

	<div class="sect">
		<div class="sect-header fx-row fx-middle">
			<h2 class="sect-title icon-l icon-red"><span class="fa fa-link"></span>Читайте также</h2>
		</div>
		<div class="sect-slide-items owl-carousel clearfix">
			{related-news}	
		</div>
	</div>
			
		
	<div class="full-comms ignore-select" id="full-comms">
		<div class="sect-header fx-row fx-middle">
			<h2 class="sect-title icon-l icon-red"><span class="fa fa-comments"></span>Комментарии ({comments-num})</h2>
		</div>
		{addcomments}
		{comments}
		{navigation}
	</div>
	
</article>